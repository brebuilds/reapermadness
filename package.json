{
  "name": "reaper-assistant",
  "version": "1.0.0",
  "private": true,
  "description": "REAPER DAW Knowledge Assistant - MCP Server + React Frontend",
  "author": "Marc",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:server": "pnpm --filter @reaper-assistant/server dev",
    "dev:web": "pnpm --filter @reaper-assistant/web dev",
    "build": "pnpm -r build",
    "build:server": "pnpm --filter @reaper-assistant/server build",
    "build:web": "pnpm --filter @reaper-assistant/web build",
    "build:desktop": "pnpm build:server && pnpm bundle:server && pnpm build:web && pnpm --filter reapermadness build",
    "build:desktop:win": "pnpm build:server && pnpm bundle:server && pnpm build:web && pnpm --filter reapermadness build:win",
    "bundle:server": "cd packages/server && npx esbuild src/index.ts --bundle --platform=node --target=node18 --format=cjs --outfile=dist/server-bundle.cjs",
    "start": "pnpm --filter @reaper-assistant/server start",
    "start:mcp": "node packages/server/dist/index.js --mcp",
    "desktop": "pnpm --filter reapermadness start",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

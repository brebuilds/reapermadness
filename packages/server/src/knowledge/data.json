  "osc": {
    "overview": {
      "description": "Open Sound Control protocol for remote control of REAPER",
      "defaultPort": 8000,
      "protocol": "UDP",
      "direction": "Bidirectional - send commands and receive state"
    },
    "setup": {
      "steps": [
        "1. Open REAPER Preferences (Ctrl+P)",
        "2. Go to Control/OSC/Web",
        "3. Click 'Add'",
        "4. Select 'OSC (Open Sound Control)'",
        "5. Set Local listen port (default: 8000)",
        "6. Set Device IP (127.0.0.1 for local, or device IP)",
        "7. Set Device port (port your app listens on)",
        "8. Choose pattern config (Default works well)",
        "9. Click OK"
      ],
      "recommendedSettings": {
        "localListenPort": 8000,
        "devicePort": 9000,
        "deviceIP": "127.0.0.1"
      }
    },
    "patterns": {
      "transport": {
        "/play": "Play (value 1 = play, 0 = stop)",
        "/stop": "Stop",
        "/pause": "Toggle pause",
        "/record": "Toggle record",
        "/repeat": "Toggle loop/repeat",
        "/click": "Toggle metronome"
      },
      "position": {
        "/time": "Transport position in seconds",
        "/beat": "Transport position in beats",
        "/samples": "Transport position in samples",
        "/frames": "Transport position in frames",
        "/rewind": "Rewind",
        "/forward": "Fast forward"
      },
      "tempo": {
        "/tempo/raw": "Set tempo (float BPM value)",
        "/tempo/str": "Tempo as string"
      },
      "tracks": {
        "/track/{N}/volume": "Track N volume (0.0-1.0)",
        "/track/{N}/pan": "Track N pan (-1.0 to 1.0)",
        "/track/{N}/mute": "Track N mute (0/1)",
        "/track/{N}/solo": "Track N solo (0/1)",
        "/track/{N}/recarm": "Track N record arm (0/1)",
        "/track/{N}/monitor": "Track N input monitor (0/1/2)"
      },
      "actions": {
        "/action/{id}": "Trigger action by ID",
        "/action/{name}": "Trigger action by name (SWS actions use _NAME format)"
      },
      "midi": {
        "/vkb_midi/{channel}/{note}/{velocity}": "Send MIDI note via virtual keyboard",
        "/vkb_midi/{channel}/cc/{cc}/{value}": "Send MIDI CC via virtual keyboard"
      },
      "fx": {
        "/track/{N}/fx/{X}/bypass": "Bypass FX X on track N",
        "/track/{N}/fx/{X}/fxparam/{P}/value": "Set FX parameter value"
      }
    },
    "examples": {
      "playback": "Send /play with value 1 to start playback",
      "setTempo": "Send /tempo/raw with value 120.0 to set 120 BPM",
      "triggerAction": "Send /action/40757 to split items at cursor",
      "sendMidiNote": "Send /vkb_midi/0/36/127 to trigger C2 note (Super8 Track 1)"
    }

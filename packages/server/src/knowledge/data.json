          "features": ["Unlimited bands", "Multiple filter types", "Real-time spectrum display", "Low CPU usage"],
          "parameters": {
            "bandType": ["Low Shelf", "High Shelf", "Band", "Low Pass", "High Pass", "Notch", "Band Pass", "All Pass"],

{
  "name": "reapermadness",
  "version": "1.0.5",
  "description": "REAPER Assistant - Your AI-powered REAPER expert",
  "main": "main.js",
  "author": "Reapermadness",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/brebuilds/reapermadness"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.reapermadness.app",
    "productName": "Reaper Madness",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "server/**/*",
      "web/**/*"
    ],
    "extraResources": [
      {
        "from": "../server/dist",
        "to": "server",
        "filter": ["**/*"]
      },
      {
        "from": "../server/src/knowledge",
        "to": "server/knowledge",
        "filter": ["**/*"]
      },
      {
        "from": "../web/dist",
        "to": "web",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "assets/icon.icns",
      "category": "public.app-category.music"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "assets/icon.png",
      "category": "Audio"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Reaper Madness"
    }
  }
}

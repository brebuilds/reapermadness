  "troubleshooting": {
    "commonIssues": [
      {
        "issue": "High latency",
        "solutions": [
          "Reduce buffer size (try 128 samples)",
          "Use ASIO driver on Windows",
          "Check for plugins with high PDC",
          "Disable WiFi and background processes"
        ]
      },
      {
        "issue": "Audio dropouts",
        "solutions": [
          "Increase buffer size slightly",
          "Check CPU usage in Performance Meter",
          "Freeze resource-heavy tracks",
          "Disable unused tracks/plugins"
        ]
      },
      {
        "issue": "MIDI not responding",
        "solutions": [
          "Check MIDI device is enabled in Preferences",
          "Verify MIDI channel matches",
          "Use MIDI Monitor to see incoming data",
          "Check 'Enable input for control messages'"
        ]
      },
      {
        "issue": "Looper not syncing",
        "solutions": [
          "Verify Super8/Playtime sync mode",
          "Check project tempo is set",
          "Ensure transport is running for synced mode",
          "Try tap tempo to establish beat"
        ]
      }
    ]

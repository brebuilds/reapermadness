  "overview": {
    "name": "REAPER",
    "fullName": "Rapid Environment for Audio Production, Engineering, and Recording",
    "developer": "Cockos Incorporated",
    "founder": "Justin Frankel (creator of Winamp, Gnutella)",
    "initialRelease": "2006",
    "currentVersion": "7.x",
    "platforms": ["Windows", "macOS", "Linux"],
    "philosophy": "Lightweight, customizable, affordable professional DAW",
    "useCases": [
      "Music production",
      "Podcast editing",
      "Film/game audio post-production",
      "Live performance and looping",
      "Sound design",
      "Audiobook production",
      "Broadcast audio"
    ]
  },
  "pricing": {
    "discountedLicense": {
      "price": 60,
      "currency": "USD",
      "eligibility": "Individuals or businesses with annual gross revenue under $20,000 USD from products using REAPER, or educational/non-profit use"
    },
    "commercialLicense": {
      "price": 225,
      "currency": "USD",
      "eligibility": "Businesses with annual gross revenue of $20,000 USD or more from products using REAPER"
    },
    "trial": {
      "duration": "60 days",
      "limitations": "None - full functionality",
      "note": "Continues working after trial with reminder message"
    },
    "upgrades": {
      "policy": "Free minor updates, discounted major upgrades",
      "upgradePrice": "60 USD for major version upgrades"
    }
  },
  "features": {
    "core": [
      "Unlimited tracks (audio, MIDI, video)",
      "Non-destructive editing",
      "Comprehensive routing matrix",
      "Built-in effects (ReaPlugs)",
      "JSFX scripting for custom effects",
      "ReaScript automation (Lua, Python, EEL2)",
      "Extensive keyboard shortcut customization",
      "Theme customization",
      "Portable installation option",
      "Low CPU usage",
      "Fast startup time",
      "Small installer (~25MB)"
    ],
    "v7Highlights": [
      "AI-powered stretch markers",
      "Improved MIDI editing",
      "Enhanced video support",
      "New built-in effects",
      "Performance improvements",
      "Updated default theme"
    ],
    "routing": {
      "description": "Flexible signal routing system",
      "capabilities": [
        "Unlimited sends/receives per track",
        "Hardware outputs routing",
        "Sidechain support",
        "Folder track summing",
        "Channel splitting/combining"
      ]
    }
  },
  "plugins": {
    "reaPlugs": {
      "description": "Built-in professional-grade plugins included with REAPER",
      "plugins": [
        {
          "name": "ReaEQ",
          "type": "Equalizer",
          "description": "Unlimited band parametric EQ with spectrum analyzer",
          "features": ["Unlimited bands", "Multiple filter types", "Real-time spectrum display"]
        },
        {
          "name": "ReaComp",
          "type": "Compressor",
          "description": "Full-featured compressor with visual feedback",
          "features": ["Soft/hard knee", "Auto makeup gain", "Sidechain input", "Visual compression display"]
        },
        {
          "name": "ReaGate",
          "type": "Gate/Expander",
          "description": "Noise gate with look-ahead and sidechain",
          "features": ["Adjustable attack/release", "Look-ahead", "Sidechain filtering"]
        },
        {
          "name": "ReaDelay",
          "type": "Delay",
          "description": "Multi-tap delay with tempo sync",
          "features": ["Multiple taps", "Tempo sync", "Ping-pong mode", "Filter per tap"]
        },
        {
          "name": "ReaVerb",
          "type": "Reverb",
          "description": "Convolution reverb with impulse response support",
          "features": ["Impulse response loading", "Echo generator", "Low CPU mode"]
        },
        {
          "name": "ReaPitch",
          "type": "Pitch Shifter",
          "description": "Real-time pitch shifting and correction",
          "features": ["Formant preservation", "Multiple algorithms"]
        },
        {
          "name": "ReaLimit",
          "type": "Limiter",
          "description": "Brickwall limiter for mastering",
          "features": ["True peak limiting", "Auto release", "Visual metering"]
        },
        {
          "name": "ReaXcomp",
          "type": "Multiband Compressor",
          "description": "Up to 32-band multiband compressor",
          "features": ["Unlimited bands", "Per-band solo", "FFT display"]
        },
        {
          "name": "ReaSynth",
          "type": "Synthesizer",
          "description": "Simple subtractive synthesizer",
          "features": ["Multiple waveforms", "Filter section", "Envelope control"]
        },
        {
          "name": "ReaSamplOmatic5000",
          "type": "Sampler",
          "description": "Powerful sampler for drums and instruments",
          "features": ["Multi-sample support", "Round-robin", "Velocity layers", "ADSR envelope"]
        }
      ]
    },
    "jsfx": {
      "description": "REAPER's built-in scripted effects format",
